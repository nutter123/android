<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/colorChecked"
    android:elevation="1dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@id/imageView"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_shop_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="店铺名称"
            android:textColor="@color/colorUnChecked"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/textView_shop_Bar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:isIndicator="true"
            android:numStars="5"
            android:progressDrawable="@android:drawable/btn_star_big_on"
            android:rating="3.5"
            android:stepSize="0.5"
            android:text="店铺星级"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_shop_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="店铺简介"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textView_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="店铺说明"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
