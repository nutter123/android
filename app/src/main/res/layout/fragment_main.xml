    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_shop_list"
            style="@style/RadioButtonStyle"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:drawableTop="@drawable/selector_shop_list"
            android:paddingTop="2dp"
            android:text="店铺"></RadioButton>

        <RadioButton
            android:id="@+id/radio_shop_collect"
            style="@style/RadioButtonStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_shop_favor"
            android:padding="2dp"
            android:text="收藏"></RadioButton>

        <RadioButton
            android:id="@+id/radio_shop_search"
            style="@style/RadioButtonStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_shop_search"
            android:padding="2dp"
            android:text="搜索"></RadioButton>

        <RadioButton
            android:id="@+id/radio_shop_me"
            style="@style/RadioButtonStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_shop_setting"
            android:padding="2dp"
            android:text="关于"></RadioButton>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/framlayout"
        android:layout_above="@id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
